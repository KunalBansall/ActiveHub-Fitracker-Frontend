{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "react-jsx",
    "outDir": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types"],
    "baseUrl": "src",  // Add baseUrl to point to the src folder
    "paths": {
      "@/*": ["*"]  // Add path alias for @ to resolve to src/
    },
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "types": ["react", "react-dom"]
  },
  "include": ["src"]
}
